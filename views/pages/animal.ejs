<%- contentFor('animal') %>
<div class="container">
<div class="col-md-8">
<div class="container" style="margin-top: 5%;">
    <div class="card" style="width: 50%;">
      <img class="card-img-top" style="height: 300px" src=".<%= animal.img.data %>" alt="Card image cap">
      <div class="card-block">
        <h4 class="card-title">Tipo: <%= animal.type %></h4>
        <h4 class="card-title">Idade (aprox): <%= animal.age %></h4>
        <h4 class="card-title">Sexo: <%= animal.gender %></h4>
        <h4 class="card-title">Informações: <%= animal.description %></h4>
        <br>
        <hr>
        <div class="text-center"><a href="#" class="btn btn-primary"><h4><i class="fa fa-facebook" aria-hidden="true"></i> Compartilhar!</h4></a></div>
      </div>
    </div> 
</div>	
</div> 
</div>